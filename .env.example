# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rfp_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_POOL_IDLE_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# API Server Configuration
API_PORT=3001
API_HOST=localhost
NODE_ENV=development
DEBUG=rfp:*

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=RFP Platform
VITE_APP_VERSION=2.0.0

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production_12345
JWT_EXPIRY=7d
SESSION_SECRET=your_session_secret_key_change_in_production_12345
BCRYPT_ROUNDS=10

# Salesforce Integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_INSTANCE_URL=https://login.salesforce.com
SALESFORCE_REDIRECT_URI=http://localhost:3001/api/integrations/salesforce/callback
