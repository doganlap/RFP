{
  "name": "rfp-qualification-platform",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Enterprise RFP Qualification Platform with Sales-PreSales Workflow",
  "keywords": ["rfp", "sales", "presales", "enterprise", "workflow"],
  "author": "RFP Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite preview",
    "api:dev": "cd api && npm run dev",
    "api:start": "cd api && npm start",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "playwright test --config playwright.smoke.config.js",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t rfp-platform .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.production.yml up -d",
    "db:migrate": "cd api && npm run db:migrate",
    "db:seed": "cd api && npm run db:seed",
    "db:reset": "cd api && npm run db:reset",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-query": "^3.39.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-dropzone": "^14.2.3",
    "react-beautiful-dnd": "^13.1.1",
    "react-datepicker": "^4.25.0",
    "react-select": "^5.8.0",
    "react-table": "^7.8.0",
    "react-virtualized": "^9.22.5",
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.4",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "classnames": "^2.3.2",
    "framer-motion": "^10.16.16",
    "recharts": "^2.8.0",
    "react-pdf": "^7.6.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "xlsx": "^0.18.5",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "qrcode": "^1.5.3",
    "crypto-js": "^4.2.0",
    "jwt-decode": "^4.0.0",
    "@microsoft/msal-browser": "^3.5.0",
    "@microsoft/msal-react": "^2.0.7",
    "firebase": "^10.7.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/file-saver": "^2.0.7",
    "@types/crypto-js": "^4.2.1",
    "@types/qrcode": "^1.5.5",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "playwright": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
