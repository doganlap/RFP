# Production Environment Configuration
# Enterprise RFP Platform

# ==================== APPLICATION ====================
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://rfp.yourdomain.com
API_URL=https://api.rfp.yourdomain.com
WS_URL=wss://api.rfp.yourdomain.com

# ==================== DATABASE ====================
# PostgreSQL Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/rfp_platform
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=rfp_platform
POSTGRES_USER=rfp_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_SSL=true
POSTGRES_MAX_CONNECTIONS=20

# ==================== REDIS ====================
# Redis Configuration for caching and sessions
REDIS_URL=redis://username:password@hostname:6379
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# ==================== SECURITY ====================
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_SALT_ROUNDS=12

# ==================== CLOUD STORAGE ====================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rfp-platform-documents-prod
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# ==================== AUTHENTICATION ====================
# Azure Active Directory (SSO)
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_REDIRECT_URI=https://rfp.yourdomain.com/auth/callback

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_REDIRECT_URI=https://api.rfp.yourdomain.com/auth/oauth2/callback

# ==================== EMAIL SERVICES ====================
# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=RFP Platform

# SMTP Configuration (Alternative)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# ==================== INTEGRATIONS ====================
# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_NOTIFICATIONS=#rfp-notifications
SLACK_CHANNEL_ALERTS=#rfp-alerts

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url

# Salesforce Integration
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token
SALESFORCE_INSTANCE_URL=https://your-org.salesforce.com

# HubSpot Integration
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret

# ==================== MONITORING & LOGGING ====================
# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=RFP-Platform-Production

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Elasticsearch (for logging and search)
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Log Level
LOG_LEVEL=info
LOG_FORMAT=json

# ==================== SECURITY & COMPLIANCE ====================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=https://rfp.yourdomain.com,https://admin.rfp.yourdomain.com
CORS_CREDENTIALS=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline' https://cdn.tailwindcss.com
CSP_IMG_SRC='self' data: https:
CSP_CONNECT_SRC='self' wss: ws:

# ==================== FEATURE FLAGS ====================
# Feature toggles for gradual rollout
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_RECOMMENDATIONS=false
FEATURE_MOBILE_APP=true
FEATURE_MULTI_TENANT=true
FEATURE_SSO_INTEGRATION=true
FEATURE_DOCUMENT_VERSIONING=true
FEATURE_DIGITAL_SIGNATURES=false

# ==================== PERFORMANCE ====================
# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_UPLOAD=10

# ==================== BACKUP & DISASTER RECOVERY ====================
# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rfp-platform-backups-prod

# ==================== THIRD-PARTY SERVICES ====================
# Document Processing
DOCUSIGN_CLIENT_ID=your-docusign-client-id
DOCUSIGN_CLIENT_SECRET=your-docusign-client-secret
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id

# PDF Generation
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# ==================== DEVELOPMENT OVERRIDES ====================
# These should be empty in production
DEBUG=
MOCK_EXTERNAL_APIS=false
SKIP_AUTH=false
DISABLE_RATE_LIMITING=false

# ==================== HEALTH CHECKS ====================
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# ==================== KUBERNETES/DOCKER ====================
# Container Configuration
CONTAINER_PORT=3001
READINESS_PROBE_PATH=/health
LIVENESS_PROBE_PATH=/health

# Resource Limits
MEMORY_LIMIT=1Gi
CPU_LIMIT=500m
MEMORY_REQUEST=512Mi
CPU_REQUEST=250m
