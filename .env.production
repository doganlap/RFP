# Production Environment Configuration
# IMPORTANT: Replace these with your actual production values

# Database - PostgreSQL (REQUIRED)
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rfp_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rfp_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Node/API Server
NODE_ENV=production
API_PORT=3001
API_HOST=0.0.0.0

# JWT Authentication (REQUIRED - change these values!)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure-32-chars-min
JWT_EXPIRY=7d

# Frontend API URL
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=RFP Platform
VITE_APP_VERSION=2.0.0

# Optional Services
SALESFORCE_CLIENT_ID=mock_salesforce_client_id
SALESFORCE_CLIENT_SECRET=mock_salesforce_client_secret
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

HUBSPOT_API_KEY=your_hubspot_api_key

SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@rfpplatform.com

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Logging
LOG_LEVEL=info
DEBUG=rfp:*

