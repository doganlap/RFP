{
  "name": "rfp-qualification-platform",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Enterprise RFP Qualification Platform with Sales-PreSales Workflow",
  "keywords": [
    "rfp",
    "sales",
    "presales",
    "enterprise",
    "workflow"
  ],
  "author": "RFP Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite preview",
    "api:dev": "cd api && npm run dev",
    "api:start": "cd api && npm start",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "playwright test --config playwright.smoke.config.js",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t rfp-platform .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.production.yml up -d",
    "db:migrate": "cd api && npm run db:migrate",
    "db:seed": "cd api && npm run db:seed",
    "db:reset": "cd api && npm run db:reset",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.10",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "firebase": "^10.7.1",
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.66.1",
    "react-router-dom": "^7.9.6",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^5.0.8"
  }
}
