{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/ar/terms", "destination": "/index.html" },
    { "source": "/ar/privacy", "destination": "/index.html" },
    { "source": "/ar/support", "destination": "/index.html" },
    { "source": "/ar/platform/motivation", "destination": "/index.html" },
    { "source": "/ar/platform/hr", "destination": "/index.html" },
    { "source": "/ar/platform/finance", "destination": "/index.html" },
    { "source": "/ar/platform/sales", "destination": "/index.html" },
    { "source": "/ar/platform/dashboard", "destination": "/index.html" },
    { "source": "/ar/platform/crm", "destination": "/index.html" },
    { "source": "/en/terms", "destination": "/index.html" },
    { "source": "/en/privacy", "destination": "/index.html" },
    { "source": "/en/support", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
